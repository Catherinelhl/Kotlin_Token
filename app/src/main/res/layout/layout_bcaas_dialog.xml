<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginTop="@dimen/y40"
                android:layout_marginRight="@dimen/x40">

    <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/black_1d2124"
            android:textSize="@dimen/x36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y32"
            android:gravity="center"
            android:text="@string/warning"/>

    <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/y10"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginRight="@dimen/x32"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y6"
            android:textColor="@color/black_1d2124"
            android:textSize="@dimen/x22"/>

    <View
            android:id="@+id/line"
            style="@style/line_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="@dimen/y32"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:layout_below="@+id/line"
            android:gravity="bottom"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_left"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/black50_1d2124"
                android:textSize="@dimen/x32"/>

        <View
                style="@style/line_style"
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/btn_right"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="@string/cancel"
                android:textColor="@color/black50_1d2124"
                android:textSize="@dimen/x32"/>
    </LinearLayout>


</RelativeLayout>