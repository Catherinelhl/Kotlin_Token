<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_password_key"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/x40"
              android:layout_marginRight="@dimen/x40"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/et_password"
                style="@style/black_14_edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:digits="@string/password_rule"
                android:drawablePadding="@dimen/x20"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:minHeight="@dimen/y48"
                android:paddingRight="@dimen/x80"
                android:singleLine="true"/>

        <CheckBox
                android:id="@+id/cb_pwd"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/selector_cb_password"
                android:checked="false"
                android:gravity="center"/>
    </RelativeLayout>

    <View
            android:id="@+id/v_password_line"
            style="@style/line_style"
            android:layout_marginTop="@dimen/y32"/>
</LinearLayout>
