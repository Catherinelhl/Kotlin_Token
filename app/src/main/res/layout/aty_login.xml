<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_login"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y0"
            android:layout_weight="1"
            android:gravity="center|bottom">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@mipmap/icon_bcaas"/>
    </LinearLayout>

    <include
            layout="@layout/include_edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y152"
            android:layout_marginRight="@dimen/x40"/>

    <Button
            android:id="@+id/btn_unlock_wallet"
            style="@style/button_style"
            android:layout_marginTop="@dimen/y60"
            android:text="@string/unlock"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y0"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y40"
            android:layout_marginRight="@dimen/x24"
            android:layout_weight="1.3">

        <TextView
                android:id="@+id/tv_create_wallet"
                style="@style/black_16_text_style"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/icon_create_wallet"
                android:drawablePadding="@dimen/x24"
                android:gravity="center_vertical"
                android:text="@string/create_wallet"/>

        <TextView
                android:id="@+id/tv_import_wallet"
                style="@style/black_16_text_style"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/icon_import_wallet"
                android:drawablePadding="@dimen/x24"
                android:gravity="center_vertical"
                android:text="@string/import_wallet"/>

        <TextView
                android:id="@+id/tv_version"
                style="@style/black30_10_text_style"
                android:layout_height="@dimen/y96"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/y60"
                android:gravity="center_horizontal|bottom"
                android:minWidth="@dimen/x160"/>

    </RelativeLayout>


</LinearLayout>