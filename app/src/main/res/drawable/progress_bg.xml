<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/x20" />

            <gradient
                android:centerColor="@color/light_grey"
                android:centerY="0.5"
                android:endColor="@color/light_grey"
                android:startColor="@color/light_grey"
                android:type="linear" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/x20" />

                <gradient
                    android:centerColor="@color/orange_FC9003"
                    android:centerX="1.0"
                    android:endColor="@color/orange_FC9003"
                    android:startColor="@color/orange_FC9003" />
            </shape>
        </clip>
    </item>

</layer-list>
