<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button_left_color</item>
        <item name="colorPrimaryDark">@color/button_right_color</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="middle_marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="end_marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="black_bold_18_text_style" parent="middle_marquee_style">
        <item name="android:textColor">@color/black_1d2124</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/x36</item>
    </style>

    <style name="black_16_text_style" parent="middle_marquee_style">
        <item name="android:textColor">@color/black_1d2124</item>
        <item name="android:textSize">@dimen/x32</item>
    </style>
    <style name="black70_14_single_text_style" parent="middle_marquee_style">
        <item name="android:textColor">@color/black70_1d2124</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bcaas_bg_button</item>
        <item name="android:layout_height">@dimen/y96</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="line_style">
        <item name="android:background">@color/black10_1d2124</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ib_style">
        <item name="android:layout_width">@dimen/x76</item>
        <item name="android:layout_height">@dimen/x76</item>
        <item name="android:padding">@dimen/x10</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="bg_white_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x0</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:layout_marginTop">@dimen/y40</item>
        <item name="android:background">@drawable/bg_white_with_shape</item>
        <item name="android:paddingLeft">@dimen/x24</item>
        <item name="android:paddingBottom">@dimen/y36</item>
        <item name="android:paddingRight">@dimen/x24</item>

    </style>

    <style name="bg_balance_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y0</item>
        <item name="android:layout_marginLeft">@dimen/x4</item>
        <item name="android:layout_marginRight">@dimen/x4</item>
        <item name="android:layout_marginTop">@dimen/y40</item>
        <item name="android:background">@drawable/bg_balance_grey</item>

    </style>

    <style name="bg_gradual_change_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:paddingLeft">@dimen/x24</item>
        <item name="android:paddingRight">@dimen/x24</item>
        <item name="android:paddingBottom">@dimen/y32</item>
        <item name="android:background">@drawable/purple_to_blue_bg</item>
        <!--<item name="android:background">@drawable/bg_gradual_change</item>-->
    </style>

    <style name="v_shape_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y48</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
        <item name="android:layout_marginRight">@dimen/x22</item>
        <item name="android:paddingLeft">@dimen/x24</item>
        <item name="android:paddingRight">@dimen/x24</item>
        <item name="android:background">@drawable/v_shape</item>
        <item name="android:layout_marginTop">-8dp</item>
    </style>

    <style name="black_14_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_1d2124</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="blue_16_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/x32</item>
    </style>


</resources>
