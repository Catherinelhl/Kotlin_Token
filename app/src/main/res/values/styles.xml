<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button_left_color</item>
        <item name="colorPrimaryDark">@color/button_right_color</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="middle_marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="end_marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="black_bold_18_text_style" parent="middle_marquee_style">
        <item name="android:textColor">@color/black_1d2124</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <!--Bcaas 二次界面改版-->
    <style name="button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bcaas_bg_button</item>
        <item name="android:layout_height">@dimen/y96</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="line_style">
        <item name="android:background">@color/black10_1d2124</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
